extends layout.pug

block mainContent
  table.pure-table-striped
    thead
      tr
        th Name
        th Type
        th Age
        th Owners
      tbody
        each pet in pets
          tr
            td= pet.name
            td= pet.PetType.type
            td= pet.age
            td
        else
          tr
            td(colspan=4) No pets
  form.pure-form(method="post", action="/pets")
    fieldset
      legend Create a pet
      input(type="text", name="name", placeholder="name", required)
      input(type="number", name="age", placeholder="age", required)
      select(name="typeId")
        each petType in petTypes
          option(value=petType.id)= petType.type
      button(type="submit") Create this pet
